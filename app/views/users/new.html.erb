<h1>Sign Up to EcoCommute</h1>
<p></p>
<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">

  <% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>
  <%= form_for @user do |f| %>
  <!-- <%= form_for @user, url: '/users' do |f| %> -->
    <p> Name:</br> <%= f.text_field :name %> </p>
    <p> Email:</br> <%= f.text_field :email, class: 'form-control' %> </p>
    <p> Password:</br> <%= f.password_field :password %></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation %> </p>
    <%= f.submit "Signup" %>

    <% end %>
  <% end %>
</div>
